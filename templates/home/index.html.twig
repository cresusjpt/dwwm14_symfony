{% extends 'base.html.twig' %}

{% block title %}Liste des produits
{% endblock %}

{% block body %}
	<div class="container px-4 py-5" id="custom-cards">
		<div class="row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">

			{% for item in produits %}
				<div class="col">
					<div class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg" style="background-image: url('images/{{item.image}}');">
						<div class="d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
							<h2 class="pt-5 mt-5 mb-4 display-6 lh-1 fw-bold">{{item.name}}</h2>
							<ul class="d-flex list-unstyled mt-auto">
								<li class="me-auto">
									<a href="{{path('cart', {'id':item.id} )}}"><img src="data:image/png;base64," alt="Bootstrap" width="50" height="50" class="rounded-circle border border-white"></a>
								</li>
								<li class="d-flex align-items-center me-3">
									<svg class="bi me-2" width="1em" height="1em"><use xlink:href="#geo-fill"/></svg>
									<small>{{item.category.name}}</small>
								</li>
								<li class="d-flex align-items-center">
									<svg class="bi me-2" width="1em" height="1em"><use xlink:href="#calendar3"/></svg>
									<small>{{item.qteStock}}</small>
								</li>
							</ul>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>

	<div class="b-example-divider"></div>
{% endblock %}
